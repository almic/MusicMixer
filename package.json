{
    "name": "musicmixer",
    "version": "0.1.0",
    "description": "library for mixing sounds and music with the Web Audio API",
    "main": "dist/main.js",
    "engines": {
        "node": "21.1.0"
    },
    "scripts": {
        "build": "npm run format && tsc -b && npm run copyDistToDocs && npm run copyGraphicsBuild",
        "start": "onchange --await-write-finish 1500 \"src/**/*.ts\" \"src/**/*.js\" -- npm run build",
        "format": "prettier src/**/*.ts src/**/*.js graphics/**/*.ts graphics/**/*.js test/**/*.ts test/**/*.js --write --no-error-on-unmatched-pattern",
        "copyDistToDocs": "xcopy .\\dist\\*.js .\\docs\\js\\lib /e /y /v /i /f && xcopy .\\dist\\*.d.ts .\\docs\\js\\lib /e /y /v /i /f",
        "copyGraphicsBuild": "xcopy .\\graphics\\build\\*.js .\\docs\\js\\lib\\graphics /e /y /v /i /f && xcopy .\\graphics\\shaders\\*.wgsl .\\docs\\js\\lib\\graphics\\shaders /e /y /v /i /f",
        "test": "node test/build/index.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/almic/MusicMixer.git"
    },
    "keywords": [
        "music",
        "mixing"
    ],
    "author": "almic",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/almic/MusicMixer/issues"
    },
    "homepage": "https://github.com/almic/MusicMixer#readme",
    "devDependencies": {
        "@types/node": "^20.12.2",
        "@types/nw.js": "^0.13.21",
        "@types/semver": "6.2.0",
        "@webgpu/types": "^0.1.40",
        "onchange": "^7.1.0",
        "prettier": "^3.2.5",
        "semver": "6.3.1",
        "typescript": "^5.4.3"
    },
    "prettier": {
        "arrowParens": "always",
        "bracketSameLine": false,
        "bracketSpacing": true,
        "endOfLine": "crlf",
        "experimentalTernaries": false,
        "htmlWhitespaceSensitivity": "ignore",
        "printWidth": 110,
        "singleQuote": true,
        "semi": true,
        "tabWidth": 4,
        "trailingComma": "all",
        "useTabs": false
    }
}
